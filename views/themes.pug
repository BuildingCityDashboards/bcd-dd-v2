extends layout

block append head
    //link(rel='stylesheet', href='/stylesheets/themes/health/dc.css')
    link(rel='stylesheet', href='https://unpkg.com/leaflet@1.3.1/dist/leaflet.css')
    link(rel='stylesheet', href='/stylesheets/themes/health/marker_cluster_modified.css')
    link(rel='stylesheet', href='/stylesheets/themes/leaflet-chart.css')

block navigation
    +navbar("navbar navbar-expand-lg bg-dark fixed-top","/","Dublin Dashboard", "Themes")
    +subnavbar("bcd-nav bg-dark fixed-top mt-5 container-fluid")

block content
  .content
    .container
      header.header.mt-5.pt-5
        .row
          .col-md-7
            h1= title
            p.header__lead <b>Themes</b> contain singular pieces of information for learning about 
              |Dublin, explained simply. 
            p For deeper data exploration, see our 
              |<a href="../queries"> Queries</a> and <a href="../tools"> Tools</a>.            
            p This page contains all Dublin Dashboard data arranged 
              |thematically as: 
              |Transport, Environment, Economy, 
              |Housing, Education, Health, and Demographics.
            
    section#transport.section-header.bg-dark-blue
      .wrap
        .container
          include themes_transport_charts
          
    section#environment.section-header
      .wrap
        .container
          include themes_environment_charts
    
    section#economy.section-header.bg-dark-blue 
      .wrap
        .container
          include themes_economy_charts
                  
    section#housing.section-header 
      .wrap
        .container
          include themes_housing_charts

    section#education.section-header.bg-dark-blue 
      .wrap
        .container
          include themes_education_charts

    section#health.section-header 
      .wrap
        .container
          include themes_health_charts

    section#demographics.section-header.bg-dark-blue 
      .wrap
        .container
          include themes_demographics_charts

