- var sideLinks = { "HOME": "/", "THEMES": "/themes", "STORIES": "/stories", "TOOLS": "/tools", "QUERIES": "/queries"  }

mixin nav-item(name, link)
    li.side-menu__nav-item
        a.nav-link.px-2(href=link)= name

button.side-menu__toggler.side-menu__toggler--closed
    div(class='hamburger-btn')
        div(class='bar1') 
        div(class='bar2')
        div(class='bar3')

nav.side-menu
        .side-menu__header 
            h3 BCD
        
        ul.side-menu__nav.nav.navbar-nav
            each val, key in sideLinks
                +nav-item(key, val)

        .side-menu__footer